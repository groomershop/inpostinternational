<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="carriers">
            <group id="inpostinternationalcourier" translate="label" type="text" sortOrder="240" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>InPost International - Przesy≈Çka kurierska</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                       canRestore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="1" canRestore="1">
                    <label>Title</label>
                </field>
                <field id="name" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
                       showInStore="1" canRestore="1">
                    <label>Method name</label>
                </field>
                <field id="price" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1"
                       showInStore="1" canRestore="1">
                    <label>Price</label>
                    <validate>validate-number validate-zero-or-greater</validate>
                </field>
                <field id="free_shipping_enable" translate="label" type="select" sortOrder="50" showInDefault="1"
                       showInWebsite="1">
                    <label>Enable Free Shipping Threshold</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="free_shipping_subtotal" translate="label" type="text" sortOrder="60" showInDefault="1"
                       showInWebsite="1">
                    <label>Free Shipping Amount Threshold</label>
                    <validate>validate-number validate-zero-or-greater</validate>
                    <depends>
                        <field id="free_shipping_enable">1</field>
                    </depends>
                </field>
                <field id="tax_including" translate="label" type="select" sortOrder="61" showInDefault="1"
                       showInWebsite="1">
                    <label>Free Shipping Amount Including Tax</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="free_shipping_enable">1</field>
                    </depends>
                </field>
                <field id="position" translate="label" type="text" sortOrder="70" showInDefault="1"
                       showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Position</label>
                </field>
                <field id="logo" translate="label" type="image" sortOrder="75" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Logo for checkout</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Image</backend_model>
                    <upload_dir config="system/filesystem/media">inpost_logo</upload_dir>
                    <base_url type="media" scope_info="1">inpost_logo</base_url>
                </field>
                <field id="max_cart_weight" translate="label" type="text" sortOrder="80" showInDefault="1"
                       showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Max cart weight</label>
                    <comment>The default value of 25 refers to the maximum weight of a package that Inpost delivers
                        in kilograms. If you use a different unit, adjust this value and set the appropriate unit in
                        the "Inpost - general configuration" section
                    </comment>
                </field>
                <field id="sallowspecific" translate="label" type="select" sortOrder="110" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Ship to Applicable Countries</label>
                    <frontend_class>shipping-applicable-country</frontend_class>
                    <source_model>Magento\Shipping\Model\Config\Source\Allspecificcountries</source_model>
                </field>
                <field id="specificcountry" translate="label" type="multiselect" sortOrder="120" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Ship to Specific Countries</label>
                    <source_model>Smartcore\InPostInternational\Model\Config\Source\Country</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>
            </group>
        </section>

        <section id="shipping">
            <group id="inpostinternational" translate="label" type="text" showInDefault="1" showInWebsite="1"
                   sortOrder="998">
                <label>InPost International</label>
                <field id="mode" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" canRestore="1">
                    <label>Mode</label>
                    <source_model>Smartcore\InPostInternational\Model\Config\Source\Mode</source_model>
                    <comment model="Smartcore\InPostInternational\Block\Adminhtml\System\Config\ModuleVersion" />
                </field>
                <field id="client_id_production" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Production Client ID</label>
                    <depends>
                        <field id="mode">production</field>
                    </depends>
                </field>
                <field id="client_secret_production" translate="label" type="obscure" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Production Client secret</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <depends>
                        <field id="mode">production</field>
                    </depends>
                </field>
                <field id="client_id_sandbox" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Sandbox Client ID</label>
                    <depends>
                        <field id="mode">sandbox</field>
                    </depends>
                </field>
                <field id="client_secret_sandbox" translate="label" type="obscure" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Sandbox Client secret</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <depends>
                        <field id="mode">sandbox</field>
                    </depends>
                </field>
                <field id="auth_request" translate="label" type="button" sortOrder="30" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <frontend_model>Smartcore\InPostInternational\Block\Adminhtml\System\Config\AuthRequestButton</frontend_model>
                    <comment>Client ID and Client Secret needs to be saved before You will request authorization. Authorization needs to be refreshed after mode change.</comment>
                </field>
                <field id="weight_attribute_code" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Weight attribute code</label>
                </field>
                <field id="weight_unit" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" canRestore="1">
                    <label>Weight unit</label>
                    <source_model>Smartcore\InPostInternational\Model\Config\Source\WeightUnit</source_model>
                </field>
                <field id="well_known_production" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="0"
                       showInStore="0">
                    <label>Production well-known url</label>
                    <depends>
                        <field id="mode">production</field>
                    </depends>
                </field>
                <field id="well_known_sandbox" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="0"
                       showInStore="0">
                    <label>Sandbox well-known url</label>
                    <depends>
                        <field id="mode">sandbox</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
