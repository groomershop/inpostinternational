<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                inpostinternational_parceltemplate_index.inpostinternational_parceltemplate_index_data_source
            </item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add"
                    class="Smartcore\InPostInternational\Ui\Component\Listing\Button\AddParcelTemplateButton"/>
        </buttons>
        <spinner>inpostinternational_parceltemplate_columns</spinner>
        <deps>
            <dep>inpostinternational_parceltemplate_index.inpostinternational_parceltemplate_index_data_source</dep>
        </deps>
    </settings>
    <dataSource name="inpostinternational_parceltemplate_index_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">entity_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Smartcore_InPostInternational::parcel_template</aclResource>
        <dataProvider class="Smartcore\InPostInternational\Ui\DataProvider\ParcelTemplate\ListingDataProvider"
                      name="inpostinternational_parceltemplate_index_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="templates" xsi:type="array">
                        <item name="filters" xsi:type="array">
                            <item name="select" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                                <item name="template" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                            </item>
                        </item>
                    </item>
                </item>
            </argument>
        </filters>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="inpostinternational_parceltemplate_columns">
        <settings>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">
                        inpostinternational_parceltemplate_index.inpostinternational_parceltemplate_index.inpostinternational_parceltemplate_columns.actions
                    </item>
                    <item name="target" xsi:type="string">applyAction</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">edit</item>
                        <item name="1" xsi:type="string">${ $.$data.rowIndex }</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <column name="entity_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
                <resizeDefaultWidth>25</resizeDefaultWidth>
            </settings>
        </column>
        <column name="label">
            <settings>
                <filter>text</filter>
                <label translate="true">Label</label>
            </settings>
        </column>
        <column name="length">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Length</label>
            </settings>
        </column>
        <column name="width">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Width</label>
            </settings>
        </column>
        <column name="height">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Height</label>
            </settings>
        </column>
        <column name="weight">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Weight</label>
            </settings>
        </column>
        <column name="is_default" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Is Default</label>
            </settings>
        </column>
        <actionsColumn name="actions"
                       class="Smartcore\InPostInternational\Ui\Component\Listing\Column\ParcelTemplateActions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="viewUrlPath" xsi:type="string">*/*/edit</item>
                    <item name="urlEntityParamName" xsi:type="string">entity_id</item>
                </item>
            </argument>
            <settings>
                <indexField>entity_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>107</resizeDefaultWidth>
            </settings>
        </actionsColumn>
    </columns>
</listing>
